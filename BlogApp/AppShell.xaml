<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BlogApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BlogApp.Views"
    Title="BlogApp">

    <ShellContent
        Title="Posts"
        ContentTemplate="{DataTemplate local:PostsPage}"
        Route="PostsPage" />

    <ShellContent
        Title="Detalhes do Post"
        ContentTemplate="{DataTemplate local:PostDetailPage}"
        Route="PostDetailPage" />

</Shell>
